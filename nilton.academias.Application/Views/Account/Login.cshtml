@model nilton.academias.Application.Models.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutGeral.cshtml";
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-sm-6">
            <img src="~/img/login.jpg" alt="Imagem da tela de login" style="width: 100%" />
        </div>
        <div class="col-sm-6">
            <form class="row g-3" asp-controller="Account" asp-action="Login" method="post">
                <div class="col-12">
                    <label for="primeiroNome" class="form-label">Usuário</label>
                    <input type="text" class="form-control" id="primeiroNome" placeholder="Digite seu primeiro nome" asp-for="UserName">
                </div>
                <div class="col-12">
                    <label for="ultimoNome" class="form-label">Senha</label>
                    <input type="password" class="form-control" id="ultimoNome" placeholder="Digite seu último nome" asp-for="Password">
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </div>
    </div>
</div>

